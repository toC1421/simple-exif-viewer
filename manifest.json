{
    "name": "Simple Exif Viewer",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "view exif information context menus",
    "background": {
        "persistent": false,
        "scripts": ["js/background.js"],
        "css": ["css/style.css"]
    },
    "permissions": [
        "tabs",
        "http://*/*",
        "https://*/*",
        "background",
        "contextMenus"
    ],
    "icons" : {
      "16" : "/img/16.png",
      "48" : "/img/48.png",
      "128" : "/img/128.png"
    }
}
